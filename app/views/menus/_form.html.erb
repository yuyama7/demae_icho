  <%= form_for([@restaurant, @restaurant.menus.build], :html => {:class => "form-horizontal"}) do |f| %>
    <% if menu.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
        <ul>
        <% menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Menu Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image_path, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image_path %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :price, :class => "form-control", :placeholder => "Price" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save Menu" %>
        <%= link_to 'Back', restaurant_menus_path, :class => "btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>