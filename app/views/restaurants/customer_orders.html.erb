<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Order By</th>
      <th>Order Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.name %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Accept', order %></td>
        <td><%= link_to 'Cancel', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
