<p id="notice"><%= notice %></p>

<p>
  <strong>Restaurant Name</strong>
  <%= @order.restaurant.name %>
</p>

<p>
  <strong>Status</strong>
  <%= @order.status %>
</p>

<p>
  <strong>Total Price</strong>
  <%= @total_price %>
</p>

